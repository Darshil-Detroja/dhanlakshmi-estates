@model List<RealEstateManagementSystem.Models.User>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Users";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1><i class="bi bi-people me-2"></i>Manage Users</h1>
        <p>View and manage registered users</p>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Location</th>
                        <th>Registered</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr class="@(user.HasPendingUpdates ? "table-warning" : "")">
                            <td>
                                @user.FullName
                                @if (user.HasPendingUpdates)
                                {
                                    <span class="badge bg-danger ms-2">Pending Update</span>
                                }
                            </td>
                            <td>@user.Email</td>
                            <td>@(user.PhoneNumber ?? "N/A")</td>
                            <td>@(user.City != null ? $"{user.City}, {user.State}" : "N/A")</td>
                            <td>@user.CreatedDate.ToString("MM/dd/yyyy")</td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@user.UserId" class="btn btn-sm btn-info btn-action">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <form asp-action="ToggleStatus" asp-route-id="@user.UserId" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-@(user.IsActive ? "warning" : "success") btn-action" 
                                            onclick="return confirm('@(user.IsActive ? "Deactivate" : "Activate") this user?');">
                                        <i class="bi bi-@(user.IsActive ? "pause" : "play")-circle"></i>
                                    </button>
                                </form>
                                <a asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-sm btn-danger btn-action">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
