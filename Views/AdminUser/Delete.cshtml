@model RealEstateManagementSystem.Models.User
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete User";
}

<div class="page-header">
    <h1 class="text-danger"><i class="bi bi-trash me-2"></i>Delete User</h1>
    <p>Are you sure you want to delete this user?</p>
</div>

<div class="alert alert-danger">
    <h4>Warning!</h4>
    <p>This action cannot be undone. All user data and associated inquiries will be removed.</p>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.FullName</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Phone</dt>
            <dd class="col-sm-9">@(Model.PhoneNumber ?? "N/A")</dd>

            <dt class="col-sm-3">Location</dt>
            <dd class="col-sm-9">@(Model.City != null ? $"{Model.City}, {Model.State}" : "N/A")</dd>

            <dt class="col-sm-3">Registered</dt>
            <dd class="col-sm-9">@Model.CreatedDate.ToString("MMMM dd, yyyy")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-danger">Inactive</span>
                }
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-4">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UserId" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash me-2"></i>Yes, Delete User
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-circle me-2"></i>Cancel
        </a>
    </div>
</form>
