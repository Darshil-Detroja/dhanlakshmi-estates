@model RealEstateManagementSystem.Models.User
@{
    ViewData["Title"] = "My Profile";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-custom">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-person-circle me-2"></i>My Profile</h3>
                </div>
                <div class="card-body p-4">
                    @if (Model.HasPendingUpdates)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-clock-history me-2"></i>
                            <strong>Pending Approval:</strong> Your profile update request is waiting for admin approval.
                        </div>
                    }
                    
                    <form asp-action="Profile" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="Email" />
                        <input type="hidden" asp-for="PasswordHash" />
                        <input type="hidden" asp-for="CreatedDate" />
                        <input type="hidden" asp-for="IsActive" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label"></label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="text" class="form-control" value="@Model.Email" disabled />
                            <small class="text-muted">Email cannot be changed</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label"></label>
                            <input asp-for="Address" class="form-control" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="City" class="form-label"></label>
                                <input asp-for="City" class="form-control" />
                            </div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="State" class="form-label"></label>
                                <input asp-for="State" class="form-control" />
                            </div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="ZipCode" class="form-label"></label>
                                <input asp-for="ZipCode" class="form-control" />
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Member Since:</strong> @Model.CreatedDate.ToString("MMMM dd, yyyy")
                        </div>

                        <div class="alert alert-warning">
                            <i class="bi bi-shield-check me-2"></i>
                            <strong>Note:</strong> All profile updates require admin approval for security purposes.
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-2"></i>Update Profile
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Back to Home
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Change Password Section -->
            <div class="card shadow-custom mt-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-key me-2"></i>Security</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">To change your password, please contact the administrator.</p>
                    <a href="mailto:admin@realestate.com" class="btn btn-outline-warning">
                        <i class="bi bi-envelope me-2"></i>Contact Admin
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
