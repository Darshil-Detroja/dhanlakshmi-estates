@model RealEstateManagementSystem.Models.Property
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit Property";
}

<div class="page-header">
    <h1><i class="bi bi-pencil-square me-2"></i>Edit Property</h1>
    <p>Update property information</p>
</div>

<div class="form-section">
    <form asp-action="Edit" asp-route-id="@Model.PropertyId" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="PropertyId" />
        <input type="hidden" asp-for="CreatedDate" />
        <input type="hidden" asp-for="ViewCount" />
        
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <h4>Basic Information</h4>
        <div class="row">
            <div class="col-md-8 mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="PropertyType" class="form-label"></label>
                <select asp-for="PropertyType" class="form-select">
                    <option value="">Select Type</option>
                    <option value="House">House</option>
                    <option value="Apartment">Apartment</option>
                    <option value="Condo">Condo</option>
                    <option value="Land">Land</option>
                    <option value="Commercial">Commercial</option>
                </select>
                <span asp-validation-for="PropertyType" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <h4>Location</h4>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="col-md-3 mb-3">
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="col-md-2 mb-3">
                <label asp-for="State" class="form-label"></label>
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="col-md-1 mb-3">
                <label asp-for="ZipCode" class="form-label"></label>
                <input asp-for="ZipCode" class="form-control" />
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
        </div>

        <h4>Details</h4>
        <div class="row">
            <div class="col-md-3 mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="col-md-2 mb-3">
                <label asp-for="Bedrooms" class="form-label"></label>
                <input asp-for="Bedrooms" class="form-control" type="number" />
                <span asp-validation-for="Bedrooms" class="text-danger"></span>
            </div>
            <div class="col-md-2 mb-3">
                <label asp-for="Bathrooms" class="form-label"></label>
                <input asp-for="Bathrooms" class="form-control" type="number" />
                <span asp-validation-for="Bathrooms" class="text-danger"></span>
            </div>
            <div class="col-md-2 mb-3">
                <label asp-for="Area" class="form-label"></label>
                <input asp-for="Area" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="col-md-3 mb-3">
                <label asp-for="YearBuilt" class="form-label"></label>
                <input asp-for="YearBuilt" class="form-control" type="number" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 mb-3">
                <label asp-for="GarageSpaces" class="form-label"></label>
                <input asp-for="GarageSpaces" class="form-control" type="number" />
            </div>
            <div class="col-md-3 mb-3">
                <label asp-for="Status" class="form-label"></label>
                <select asp-for="Status" class="form-select">
                    <option value="Available">Available</option>
                    <option value="Sold">Sold</option>
                    <option value="Pending">Pending</option>
                    <option value="Rented">Rented</option>
                </select>
            </div>
            <div class="col-md-3 mb-3">
                <div class="form-check mt-4">
                    <input asp-for="IsFeatured" class="form-check-input" />
                    <label asp-for="IsFeatured" class="form-check-label"></label>
                </div>
            </div>
        </div>

        <h4>Current Images</h4>
        @if (Model.PropertyImages != null && Model.PropertyImages.Any())
        {
            <div class="row mb-3">
                @foreach (var image in Model.PropertyImages)
                {
                    <div class="col-md-3 mb-3">
                        <div class="card">
                            <img src="@image.ImageUrl" class="card-img-top" alt="Property Image" style="height: 150px; object-fit: cover;" onerror="this.src='/images/placeholder.jpg'">
                            <div class="card-body p-2">
                                @if (image.IsPrimary)
                                {
                                    <span class="badge bg-success">Primary</span>
                                }
                                <form asp-action="DeleteImage" asp-route-id="@image.ImageId" method="post" class="d-inline" onsubmit="return confirm('Delete this image?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted">No images uploaded yet.</p>
        }

        <h4>Add New Images</h4>
        <div class="mb-3">
            <input type="file" name="images" class="form-control" multiple accept="image/*" />
            <small class="text-muted">Select multiple images to add to this property</small>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save me-2"></i>Update Property
            </button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
