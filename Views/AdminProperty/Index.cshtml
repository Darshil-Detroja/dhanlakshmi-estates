@model List<RealEstateManagementSystem.Models.Property>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Properties";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1><i class="bi bi-building me-2"></i>Manage Properties</h1>
        <p>View and manage all properties</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Add New Property
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Type</th>
                        <th>Price</th>
                        <th>Location</th>
                        <th>Status</th>
                        <th>Featured</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var property in Model)
                    {
                        var img = property.PropertyImages?.FirstOrDefault(i => i.IsPrimary);
                        <tr>
                            <td>
                                <img src="@(img?.ImageUrl ?? "/images/placeholder.jpg")" alt="@property.Title" class="image-preview" onerror="this.src='/images/placeholder.jpg'">
                            </td>
                            <td>@property.Title</td>
                            <td>@property.PropertyType</td>
                            <td>$@property.Price.ToString("N0")</td>
                            <td>@property.City, @property.State</td>
                            <td><span class="badge bg-@(property.Status == "Available" ? "success" : "warning")">@property.Status</span></td>
                            <td>
                                @if (property.IsFeatured)
                                {
                                    <i class="bi bi-star-fill text-warning"></i>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@property.PropertyId" class="btn btn-sm btn-info btn-action">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@property.PropertyId" class="btn btn-sm btn-primary btn-action">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@property.PropertyId" class="btn btn-sm btn-danger btn-action">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
