@model RealEstateManagementSystem.Models.Property
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Property Details";
}

<div class="page-header">
    <h1><i class="bi bi-eye me-2"></i>Property Details</h1>
</div>

<div class="card">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0">@Model.Title</h4>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.PropertyId" class="btn btn-light btn-sm">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Delete" asp-route-id="@Model.PropertyId" class="btn btn-danger btn-sm">
                <i class="bi bi-trash"></i> Delete
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <h5>Description</h5>
                <p>@Model.Description</p>

                <h5 class="mt-4">Property Details</h5>
                <dl class="row">
                    <dt class="col-sm-4">Type</dt>
                    <dd class="col-sm-8">@Model.PropertyType</dd>

                    <dt class="col-sm-4">Price</dt>
                    <dd class="col-sm-8"><strong class="text-primary">$@Model.Price.ToString("N0")</strong></dd>

                    <dt class="col-sm-4">Address</dt>
                    <dd class="col-sm-8">@Model.FullAddress</dd>

                    <dt class="col-sm-4">Bedrooms</dt>
                    <dd class="col-sm-8">@Model.Bedrooms</dd>

                    <dt class="col-sm-4">Bathrooms</dt>
                    <dd class="col-sm-8">@Model.Bathrooms</dd>

                    <dt class="col-sm-4">Area</dt>
                    <dd class="col-sm-8">@Model.Area sq ft</dd>

                    <dt class="col-sm-4">Year Built</dt>
                    <dd class="col-sm-8">@(Model.YearBuilt?.ToString() ?? "N/A")</dd>

                    <dt class="col-sm-4">Garage Spaces</dt>
                    <dd class="col-sm-8">@(Model.GarageSpaces ?? 0)</dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8"><span class="badge bg-success">@Model.Status</span></dd>

                    <dt class="col-sm-4">Featured</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsFeatured)
                        {
                            <span><i class="bi bi-star-fill text-warning"></i> Yes</span>
                        }
                        else
                        {
                            <span>No</span>
                        }
                    </dd>

                    <dt class="col-sm-4">View Count</dt>
                    <dd class="col-sm-8">@Model.ViewCount</dd>

                    <dt class="col-sm-4">Created</dt>
                    <dd class="col-sm-8">@Model.CreatedDate.ToString("MMMM dd, yyyy")</dd>

                    @if (Model.ModifiedDate.HasValue)
                    {
                        <dt class="col-sm-4">Last Modified</dt>
                        <dd class="col-sm-8">@Model.ModifiedDate.Value.ToString("MMMM dd, yyyy")</dd>
                    }
                </dl>
            </div>

            <div class="col-md-4">
                <h5>Property Images</h5>
                @if (Model.PropertyImages != null && Model.PropertyImages.Any())
                {
                    @foreach (var image in Model.PropertyImages)
                    {
                        <div class="mb-2">
                            <img src="@image.ImageUrl" class="img-fluid rounded" alt="@image.Caption" onerror="this.src='/images/placeholder.jpg'">
                            @if (image.IsPrimary)
                            {
                                <span class="badge bg-success">Primary</span>
                            }
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">No images available</p>
                }
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to List
        </a>
    </div>
</div>
