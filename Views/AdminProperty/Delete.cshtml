@model RealEstateManagementSystem.Models.Property
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete Property";
}

<div class="page-header">
    <h1 class="text-danger"><i class="bi bi-trash me-2"></i>Delete Property</h1>
    <p>Are you sure you want to delete this property?</p>
</div>

<div class="alert alert-danger">
    <h4>Warning!</h4>
    <p>This action cannot be undone. The property and all its images will be permanently deleted.</p>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Type</dt>
            <dd class="col-sm-9">@Model.PropertyType</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">$@Model.Price.ToString("N0")</dd>

            <dt class="col-sm-3">Location</dt>
            <dd class="col-sm-9">@Model.FullAddress</dd>

            <dt class="col-sm-3">Bedrooms</dt>
            <dd class="col-sm-9">@Model.Bedrooms</dd>

            <dt class="col-sm-3">Bathrooms</dt>
            <dd class="col-sm-9">@Model.Bathrooms</dd>

            <dt class="col-sm-3">Area</dt>
            <dd class="col-sm-9">@Model.Area sq ft</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9"><span class="badge bg-info">@Model.Status</span></dd>

            <dt class="col-sm-3">Featured</dt>
            <dd class="col-sm-9">
                @if (Model.IsFeatured)
                {
                    <i class="bi bi-star-fill text-warning"></i> <span>Yes</span>
                }
                else
                {
                    <span>No</span>
                }
            </dd>

            <dt class="col-sm-3">Created Date</dt>
            <dd class="col-sm-9">@Model.CreatedDate.ToString("MMMM dd, yyyy")</dd>

            <dt class="col-sm-3">View Count</dt>
            <dd class="col-sm-9">@Model.ViewCount views</dd>
        </dl>

        @if (Model.PropertyImages != null && Model.PropertyImages.Any())
        {
            <h5 class="mt-4">Property Images (@Model.PropertyImages.Count)</h5>
            <div class="row">
                @foreach (var image in Model.PropertyImages.Take(4))
                {
                    <div class="col-md-3">
                        <img src="@image.ImageUrl" class="img-fluid rounded" alt="Property" onerror="this.src='/images/placeholder.jpg'">
                    </div>
                }
            </div>
        }
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-4">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="PropertyId" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash me-2"></i>Yes, Delete Property
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-circle me-2"></i>Cancel
        </a>
    </div>
</form>
