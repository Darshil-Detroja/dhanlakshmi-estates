@{
    ViewData["Title"] = "Contact Us";
}

<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold">Contact Us</h1>
        <p class="lead text-muted">Get in touch with our team</p>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body p-4">
                    <h4>Send Us a Message</h4>
                    <form asp-controller="Property" asp-action="SubmitInquiry" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input type="text" name="Name" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" name="Email" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Phone</label>
                            <input type="tel" name="Phone" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Subject</label>
                            <input type="text" name="Subject" class="form-control" value="General Inquiry" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Message</label>
                            <textarea name="Message" class="form-control" rows="4" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Send Message</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body p-4">
                    <h4>Contact Information</h4>
                    <div class="mt-4">
                        <h5><i class="bi bi-geo-alt-fill text-primary me-2"></i>Address</h5>
                        <p>123 Real Estate Avenue<br />City, State 12345<br />United States</p>
                        
                        <h5 class="mt-4"><i class="bi bi-telephone-fill text-primary me-2"></i>Phone</h5>
                        <p>+1 (555) 123-4567</p>
                        
                        <h5 class="mt-4"><i class="bi bi-envelope-fill text-primary me-2"></i>Email</h5>
                        <p>info@realestatepro.com<br />support@realestatepro.com</p>
                        
                        <h5 class="mt-4"><i class="bi bi-clock-fill text-primary me-2"></i>Business Hours</h5>
                        <p>
                            Monday - Friday: 9:00 AM - 6:00 PM<br />
                            Saturday: 10:00 AM - 4:00 PM<br />
                            Sunday: Closed
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
