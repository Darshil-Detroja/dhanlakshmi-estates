@{
    ViewData["Title"] = "About Us";
}

<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold">About Real Estate Pro</h1>
        <p class="lead text-muted">Your Trusted Partner in Real Estate</p>
    </div>

    <div class="row mb-5">
        <div class="col-md-6">
            <h3>Our Mission</h3>
            <p>We are dedicated to helping you find the perfect property that matches your needs and lifestyle. With years of experience in the real estate market, we provide comprehensive solutions for buying, selling, and renting properties.</p>
            
            <h3 class="mt-4">Why Choose Us?</h3>
            <ul>
                <li>Extensive property listings</li>
                <li>Expert market knowledge</li>
                <li>Personalized customer service</li>
                <li>Transparent pricing</li>
                <li>Professional guidance</li>
            </ul>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body p-4">
                    <h4>Our Services</h4>
                    <hr />
                    <div class="mb-3">
                        <h5><i class="bi bi-house-door text-primary me-2"></i>Property Sales</h5>
                        <p>Helping you buy or sell residential and commercial properties</p>
                    </div>
                    <div class="mb-3">
                        <h5><i class="bi bi-key text-primary me-2"></i>Property Rentals</h5>
                        <p>Find the perfect rental property that fits your budget</p>
                    </div>
                    <div class="mb-3">
                        <h5><i class="bi bi-calculator text-primary me-2"></i>Property Valuation</h5>
                        <p>Get accurate market valuations for your property</p>
                    </div>
                    <div>
                        <h5><i class="bi bi-people text-primary me-2"></i>Consultation</h5>
                        <p>Professional real estate advice and guidance</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
