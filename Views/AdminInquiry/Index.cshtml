@model List<RealEstateManagementSystem.Models.Inquiry>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Inquiries";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1><i class="bi bi-envelope me-2"></i>Manage Inquiries</h1>
        <p>View and respond to customer inquiries</p>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <div class="btn-group" role="group">
            <a asp-action="Index" class="btn btn-@(ViewBag.Filter == null ? "primary" : "outline-primary")">All</a>
            <a asp-action="Index" asp-route-filter="unread" class="btn btn-@(ViewBag.Filter == "unread" ? "primary" : "outline-primary")">Unread</a>
            <a asp-action="Index" asp-route-filter="pending" class="btn btn-@(ViewBag.Filter == "pending" ? "primary" : "outline-primary")">Pending</a>
            <a asp-action="Index" asp-route-filter="resolved" class="btn btn-@(ViewBag.Filter == "resolved" ? "primary" : "outline-primary")">Resolved</a>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Name</th>
                        <th>Subject</th>
                        <th>Property</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var inquiry in Model)
                    {
                        <tr class="@(!inquiry.IsRead ? "inquiry-unread" : "")">
                            <td>@inquiry.InquiryDate.ToString("MM/dd/yyyy")</td>
                            <td>
                                @inquiry.Name
                                @if (!inquiry.IsRead)
                                {
                                    <span class="badge bg-warning">New</span>
                                }
                            </td>
                            <td>@inquiry.Subject</td>
                            <td>
                                @if (inquiry.Property != null)
                                {
                                    <a asp-controller="AdminProperty" asp-action="Details" asp-route-id="@inquiry.PropertyId">
                                        @inquiry.Property.Title
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">General</span>
                                }
                            </td>
                            <td>
                                @if (inquiry.IsResolved)
                                {
                                    <span class="badge bg-success">Resolved</span>
                                }
                                else if (inquiry.IsRead)
                                {
                                    <span class="badge bg-info">Read</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">New</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@inquiry.InquiryId" class="btn btn-sm btn-primary btn-action">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <form asp-action="ToggleResolved" asp-route-id="@inquiry.InquiryId" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-@(inquiry.IsResolved ? "warning" : "success") btn-action">
                                        <i class="bi bi-check-circle"></i>
                                    </button>
                                </form>
                                <a asp-action="Delete" asp-route-id="@inquiry.InquiryId" class="btn btn-sm btn-danger btn-action">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
