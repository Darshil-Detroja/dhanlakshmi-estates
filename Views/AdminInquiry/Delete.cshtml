@model RealEstateManagementSystem.Models.Inquiry
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete Inquiry";
}

<div class="page-header">
    <h1 class="text-danger"><i class="bi bi-trash me-2"></i>Delete Inquiry</h1>
    <p>Are you sure you want to delete this inquiry?</p>
</div>

<div class="alert alert-danger">
    <h4>Warning!</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">From</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Subject</dt>
            <dd class="col-sm-9">@Model.Subject</dd>

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.InquiryDate.ToString("MMMM dd, yyyy")</dd>

            <dt class="col-sm-3">Message</dt>
            <dd class="col-sm-9">@Model.Message</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @if (Model.IsResolved)
                {
                    <span class="badge bg-success">Resolved</span>
                }
                else
                {
                    <span class="badge bg-warning">Pending</span>
                }
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-4">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="InquiryId" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash me-2"></i>Yes, Delete Inquiry
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-circle me-2"></i>Cancel
        </a>
    </div>
</form>
